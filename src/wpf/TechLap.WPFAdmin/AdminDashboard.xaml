<Window x:Class="TechLap.WPFAdmin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechLap.WPFAdmin"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="600" Width="900" Background="#F0F0F0" WindowStartupLocation="CenterScreen">

    <!-- Define Grid for layout with two columns: sidebar (column 0) and content area (column 1) -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#333" Width="200" HorizontalAlignment="Left">
            <TextBlock Text="Admin Panel" FontSize="20" Foreground="White" Margin="20,30,0,20"/>
            <Button Content="Dashboard"/>
            <Button Content="Users"/>
            <Button Content="Chat" Click="Chat_Click"/>
            <Button Content="Settings" />
            <Button Content="Logout" Background="#FF5722"/>
        </StackPanel>

        <ContentControl x:Name="MainContentArea" />
        
    </DockPanel>
</Window>
