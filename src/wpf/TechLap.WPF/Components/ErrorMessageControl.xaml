<UserControl x:Class="TechLap.WPF.Components.ErrorMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="50" Visibility="Collapsed">

    <Grid>
        <Border Background="#FF4C4C" CornerRadius="5" Padding="10" Visibility="{Binding ElementName=txtErrorMessage, Path=Visibility}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="txtErrorMessage" Text="Error Message" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
