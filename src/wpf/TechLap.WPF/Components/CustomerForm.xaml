<UserControl x:Class="TechLap.WPF.CustomerForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TechLap.WPF"
             Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Customer Details" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Name:"/>
        <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,5"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailTextBox" Width="200" Margin="0,0,0,5"/>

        <TextBlock Text="Phone Number:"/>
        <TextBox x:Name="PhoneNumberTextBox" Width="200" Margin="0,0,0,15"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Width="75" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="75" Margin="5"/>
        </StackPanel>
    </StackPanel>
</UserControl>