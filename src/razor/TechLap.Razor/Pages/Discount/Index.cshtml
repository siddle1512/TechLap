@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TechLap.API.Enums
@model TechLap.Razor.Pages.Discount.IndexModel

@{
    ViewData["Title"] = "Manage Promotions";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<head>
    <link href="~/css/discount.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title></title>
</head>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Promotions</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addOrderModal" class="btn btn-success" data-toggle="modal">
                            <i class="material-icons" style="vertical-align: middle; margin-right: 5px;">add</i>
                            <span>Add New Promotions</span>
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>DiscountCode</th>
                    <th>DiscountPercentage</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>TimesUsed</th>
                    <th>UsageLimit</th>
                    <th>CreatedDate</th>
                    <th>LastModifiedDate</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Discounts != null && Model.Discounts.Any())
                {
                    @foreach (var discounts in Model.Discounts)
                    {
                        <tr>
                            <td>
                                <span class="custom-radio">
                                    <input type="radio" id="radio@discounts.Id" class="select-discount" name="selectedDiscount" value="@discounts.Id">
                                    <label for="radio@discounts.Id"></label>
                                </span>
                            </td>
                            <td>@discounts.Id</td>
                            <td>
                                <input type="text" class="form-control" value="@discounts.DiscountCode" disabled/>
                            </td>
                            <td>
                                <input type="number" class="form-control" value="@discounts.DiscountPercentage" disabled/>
                            </td>
                            <td>
                                <input type="date" class="form-control" value="@discounts.StartDate.ToString("yyyy-MM-dd")" disabled/>
                            </td>
                            <td>
                                <input type="date" class="form-control" value="@discounts.EndDate.ToString("yyyy-MM-dd")" disabled/>
                            </td>
                            <td>
                                <input type="number" class="form-control" value="@discounts.TimesUsed" disabled/>
                            </td>
                            <td>
                                <input type="number" class="form-control" value="@discounts.UsageLimit" disabled/>
                            </td>
                            <td>
                                <input type="date" class="form-control" value="@discounts.CreatedDate.ToString("yyyy-MM-dd")" disabled/>
                            </td>
                            <td>
                                <input type="date" class="form-control" value="@discounts.LastModifiedDate.ToString("yyyy-MM-dd")" disabled/>
                            </td>
                            <td>
                                <select class="form-control" asp-for="@discounts.Status" asp-items="Html.GetEnumSelectList<DiscountStatus>()" disabled>
                                </select>
                            </td>
                            <td class="action-buttons">
                                <a asp-page-handler="EditDiscount" asp-route-id="@discounts.Id" class="edit" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                </a>
                                <a asp-page-handler="DeleteDiscount" asp-route-id="@discounts.Id" class="delete" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" style="text-align:center;">There are no promotions to display</td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text" id="pagination-info"></div>
                <ul class="pagination justify-content-center"></ul>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal HTML -->
<div id="addOrderModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddDiscount">
                <div class="modal-header">
                    <h4 class="modal-title">Add Promotions</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div id="page1">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="addProduct">Discount Code</label>
                                    <input class="form-control mb-3" id="addProduct" type="text" asp-for="NewDiscount.DiscountCode" placeholder="Ex: Code..."/>
                                </div>
                                <div class="form-group">
                                    <label>Discount Percentage</label>
                                    <input type="text" class="form-control" asp-for="NewDiscount.DiscountPercentage" min="1" max="100" placeholder="Ex: 20" oninput="this.value = this.value.replace(/[^0-9]/g, '')" required/>
                                </div>
                                <div class="form-group">
                                    <label>Start Date</label>
                                    <input type="date" class="form-control" asp-for="NewDiscount.StartDate"/>
                                </div>
                                <div class="form-group">
                                    <label>End Date</label>
                                    <input type="date" class="form-control" asp-for="NewDiscount.EndDate"/>
                                </div>
                                <div class="form-group">
                                    <label>Usage Limit</label>
                                    <input type="text" class="form-control" asp-for="NewDiscount.UsageLimit" placeholder="Ex: 20" oninput="this.value = this.value.replace(/[^0-9]/g, '')" required/>
                                </div>
                                <div class="form-group">
                                    <label for="status">Status</label>
                                    <select class="form-control" asp-for="NewDiscount.Status" asp-items="Html.GetEnumSelectList<DiscountStatus>()">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-success" value="Submit"/>
                </div>
            </form>
        </div>
    </div>
</div>

